---
import { projects } from "../../data/projects.json";
---

<h2 class="text-5xl font-bold my-5">Projects</h2>

{
    projects.map((project) => (
        <div class="flex text-center md:text-left">
            <div class="flex-1 ">
                <h2 class="font-bold text-2xl my-4">{project.title}</h2>
                <p class="my-2">{project.description}</p>
                <button class="bg-indigo-500 px-3 py-2 hover:bg-indigo-400 rounded">
                    More info
                </button>
            </div>
            <div class="flex-1">
                <img src={project.image} class="w-72 m-auto" />
            </div>
        </div>
    ))
}
